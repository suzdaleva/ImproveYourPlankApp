<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlankAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="extendedFloatingActionButtonStyle">@style/FAB</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TimePicker.Display.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.TimePicker.Display</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="textAppearanceHeadline6">@style/TextTitle</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="materialDisplayDividerStyle">@style/TextTimeDialog</item>
        <item name="materialTimePickerTheme">@style/AppTheme.MaterialTimePickerTheme</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textAppearanceButton">@style/TextButton</item>
        <item name="materialCalendarTheme">@style/AppTheme.MaterialCalendarTheme</item>
        <item name="textAppearanceHeadline3">@style/TextTimeDialog</item>
        <item name="shapeAppearanceSmallComponent">@style/PlankAppSmallComponent</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout</item>
    </style>

   <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
       <item name="background">@color/secondaryColor</item>
       <item name="elevation">0dp</item>
       <item name="android:elevation">0dp</item>
   </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/TextMenu</item>
    </style>

    <style name="FAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="collapsedSize">66dp</item>
        <item name="rippleColor">#00000000</item>
        <item name="iconSize">40dp</item>
    </style>
    <style name="FABLayoutEnd">
        <item name="android:layout_marginEnd">33dp</item>
        <item name="android:layout_marginBottom">33dp</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="FABLayoutCenter">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="PlankAppSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="rippleColor">#00000000</item>
        <item name="cornerSize">9dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="rippleColor">#00000000</item>
        <item name="cornerSize">9dp</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="AppTheme.MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextSubtitle" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>
    <style name="TextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>
    <style name="TextButton" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>
    <style name="TextMenu" parent="TextButton">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextTimeLarge" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">55sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="TextTimeDialog" parent="TextTimeLarge">
        <item name="android:textSize">70sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SemiBoldText" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">#6B6B6B</item>
    </style>
    <style name="TextTimeSmall" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="MediumText" parent="SemiBoldText">
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="TextFeedbackLarge" parent="TextTitle">
        <item name="fontFamily">@font/urbanist_mediumitalic</item>
        <item name="android:fontFamily">@font/urbanist_mediumitalic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="AppTheme.MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>


    <style name="Widget.MaterialComponents.TimePicker.Display" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/inputBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="android:textColor">@color/inputTextEmpty</item>
        <item name="chipBackgroundColor">@color/secondaryColor</item>
        <item name="rippleColor">@color/secondaryColor</item>
        <item name="shapeAppearanceOverlay">?shapeAppearanceMediumComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TimePicker.Display</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Display.Divider" parent="">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:maxEms">1</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.TimePicker.Display" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Display.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TimePicker.Display.TextInputEditText</item>
        <item name="boxStrokeWidth">0dp</item>

        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.TimePicker.Display.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/Widget.MaterialComponents.TimePicker.Display.TextInputEditText</item>
        <item name="android:textViewStyle">@style/Widget.MaterialComponents.TimePicker.Display.HelperText</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Display.HelperText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#CFCFD1</item>
    </style>
    <style name="Widget.MaterialComponents.TimePicker.Display.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:minEms">2</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="ScrimStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">#ee010208</item>
    </style>
</resources>